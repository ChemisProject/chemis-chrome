<synth>
    <style id="backingStyle">
        <opaque value="TRUE"/>
        <font name="Aroania" size="15"/>
        <state>
            <color value="#f5f5f5" type="BACKGROUND"/>
            <color value="#333333" type="FOREGROUND"/>
        </state>
    </style>
    
    <style id="textfield">
        <insets top="6" left="12" bottom="6" right="12"/>
        <state>
            <!--font name="Verdana" size="14"/-->
            <color value="#555555" type="TEXT_FOREGROUND"/>
            <color value="#ababab" type="TEXT_BACKGROUND"/>
            <imagePainter method="textFieldBackground" path="images/backgroundWhite.png"
                          sourceInsets="3 4 3 4" paintCenter="true"/>
            <imagePainter method="textFieldBorder" path="images/borderTextField.png"
                          sourceInsets="3 4 3 4" paintCenter="false"/>
        </state>
        <state value="focused">
            <imagePainter method="textFieldBackground" path="images/backgroundWhite.png"
                          sourceInsets="3 4 3 4" paintCenter="true"/>
            <color value="#ffffff" type="TEXT_FOREGROUND"/>
            <imagePainter method="textFieldBorder" path="images/borderTextFieldFocus.png"
                          sourceInsets="3 4 3 4" paintCenter="false"/>
        </state>
        
    </style>
    
    <style id="button">
        <property key="Button.textShiftOffset" type="integer" value="1"/>
        
        <insets top="10" left="10" bottom="10" right="10"/>
        <state> 
            <imagePainter method="buttonBackground" path="images/button.png"
                          sourceInsets="10 10 10 10" />
            <!--font name="Dialog" size="20"/-->
            <color type="TEXT_FOREGROUND" value="#FFFFFF"/>
        </state>
              
        <state value="PRESSED"> 
            <imagePainter method="buttonBackground"
                          path="images/button2.png"
                          sourceInsets="10 10 10 10" />
        </state>
            
        <state value="MOUSE_OVER">    
            <imagePainter method="buttonBackground"
                          path="images/button2.png"
                          sourceInsets="10 10 10 10" />
        </state>
        <state value="focused">
            <imagePainter method="buttonBackground"
                          path="images/button.png"
                          sourceInsets="10 10 10 10" />
            <imagePainter method="buttonBorder" path="images/borderTextFieldFocus.png"
                          sourceInsets="1 1 1 1" paintCenter="false"/>
        </state>
    </style>
    
    <style id="checkbox">
        <imageIcon id="check_off" path="images/checkBox.png"/>
        <imageIcon id="check_on" path="images/checkBoxSelected.png"/>
        <property key="CheckBox.icon" value="check_off"/>
        <state value="SELECTED">   
            <property key="CheckBox.icon" value="check_on"/>
        </state>
    </style>

    <style id="scrollBarArrowStyle">

        <state>

            <imagePainter method="arrowButtonForeground" 
                          path="images/scrollBarUp.png" 
                          center="true" direction="north" />

            <imagePainter method="arrowButtonForeground" 
                          path="images/scrollBarDown.png" 
                          center="true" direction="south" />

            <imagePainter method="arrowButtonForeground" 
                          path="images/scrollBarLeft.png" 
                          center="true" direction="west" />

            <imagePainter method="arrowButtonForeground" 
                          path="images/scrollBarRight.png" 
                          center="true" direction="east" />
        </state>
    </style>

    <style id="scrollBarThumbStyle">
        <state>
            <imagePainter method="scrollBarThumbBackground" 
                          direction="horizontal" 
                          path="images/scrollBarThumb.png" 
                          sourceInsets="0 0 0 0" />
            
            <imagePainter method="scrollBarThumbBackground" 
                          direction="vertical" 
                          path="images/scrollBarThumb.png" 
                          sourceInsets="0 0 0 0" />
            
            <!--imagePainter method="scrollBarThumbBackground" 
                          direction="horizontal" 
                          path="images/scrollBarThumb.png" 
                          center="true" />
            
            <imagePainter method="scrollBarThumbBackground" 
                          direction="vertical" 
                          path="images/scrollBarThumb.png" 
                          center="true" /-->
        </state>

        <state value="MOUSE_OVER">
            <imagePainter method="scrollBarThumbBackground" 
                          direction="horizontal" 
                          path="images/scrollBarThumbHover.png"
                          sourceInsets="0 0 0 0" />
            
            <imagePainter method="scrollBarThumbBackground" 
                          direction="vertical" 
                          path="images/scrollBarThumbHover.png" 
                          sourceInsets="0 0 0 0" />
            
            <!--imagePainter method="scrollBarThumbBackground" 
                          direction="horizontal" 
                          path="images/scrollBarThumbHover.png" 
                          center="true" />
            
            <imagePainter method="scrollBarThumbBackground" 
                          direction="vertical" 
                          path="images/scrollBarThumbHover.png" 
                          center="true" /-->
        </state>

        <state value="DISABLED">
        </state>

    </style>

    <style id="scrollbarTrackStyle">
        <state>
            <imagePainter method="scrollBarTrackBackground" 
                          path="images/scrollBarTrack.png" 
                          direction="horizontal" sourceInsets="0 0 0 0" />
            
            <imagePainter method="scrollBarTrackBackground" 
                          path="images/scrollBarTrack.png" 
                          direction="vertical" sourceInsets="0 0 0 0" />
        </state>

        <!--state value="DISABLED">
            <imagePainter method="scrollBarTrackBackground" 
                          path="images/scrollBarTrack.png" 
                          direction="horizontal" sourceInsets="0 11 0 11" />
            
            <imagePainter method="scrollBarTrackBackground" 
                          path="images/scrollBarTrack.png" 
                          direction="vertical" sourceInsets="11 0 11 0" />
        </state-->

    </style>
    
    <bind style="backingStyle" type="region" key=".*"/>
    <bind style="textfield" type="region" key="TextField"/>
    <bind style="button" type="region" key="Button"/>
    <bind style="checkbox" type="region" key="Checkbox"/>
    <bind style="scrollBarArrowStyle" type="REGION" key="ArrowButton" />
    <bind style="scrollBarThumbStyle" type="REGION" key="ScrollBarThumb" />
    <bind style="scrollbarTrackStyle" type="REGION" key="ScrollBarTrack" />
</synth>
